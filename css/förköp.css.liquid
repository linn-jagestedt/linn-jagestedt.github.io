.no-overflow {
  overflow-y: hidden;
}

@media(max-width: 900px) {
  .no-overflow {
    overflow-y: visible;
  }
}

#formulär {
  padding: 40px;
  flex-direction: column;
  display: flex;
  position: relative;
  top: 0;
  transition: top 1s;
  height: calc(100vh - 60px - 80px);
  min-height: calc(100vh - 60px - 80px);
  width: calc(100vw - 500px - 80px);
  overflow-y: hidden;
}

@media(max-width: 900px) {
  #formulär {
    width: calc(100% - 80px);
  }
}

#formulär h2
{
  margin: 20px 0 0 0;
}

#swish-QR {
  margin: auto;
  padding: 20px;
  height: 550px;
  opacity: 0;
  transition: opacity 1s;
  z-index: -1;
}

form {
  transition: opacity 1s;
  max-width: 100%;
}

form label {
  margin: 35px 0 0 5px;
  font-size: 18px;
  font-weight: bold;
  display: block;
}

form input {
  display: block;
  height: 40px;
  border-radius: 20px;
  border-style: none;
}

form input[type=text] {
  width: 100%;
  background-color: #EEE;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}

form input[type=submit] {
  font-size: 15px;
  font-weight: bold;
  background-color: var(--off-yellow);
  width: 100px;
}

form input[type=submit]:hover {
  opacity: 0.5;
  cursor: pointer;
}
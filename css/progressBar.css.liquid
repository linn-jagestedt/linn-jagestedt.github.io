#progress-container {
  margin: 0 0 50px 0;
  width: 100%;
  background: var(--blue);
}

#progress-bar {
  border-radius: 40px;
  
  background-color: #456d84;
  box-shadow: 10px 10px 16px #00000066;
  
  width: 100%;
  max-width: 1000px;
  height: 45px;

  margin: 0;
  z-index: -1;
}

#progress-bar-markings {
  display: flex;
  flex-direction: row;
  height: 20px;
  width: 100%;
  margin: 0 0 10px 0;
  padding: 0;
  z-index: 1;
}

.progress-bar-markings-container {
  width: calc(100% / 5);
  margin: 0;
  padding: 0;
  z-index: 1;
}

#progress-bar-markings span {
  display: block;
  font-size: 0.9em;
  font-weight: bold;
  margin: 0 0 6px calc((500px - 80px) / 5 - 32px);
  white-space: nowrap;
  padding: 0;
  color: var(--off-yellow);
}

@media(max-width: 900px) {
  #progress-bar-markings span {
    font-size: 0.85em;
    margin: 0 0 6px calc((100vw - 80px) / 5 - 30px);
  }
}

#progress-bar-markings .vl {
  display: block;
  height: 45px;
  border-right: 2px solid #0009;
  margin: 13px 0 0 0;
  padding: 0;
}

@media(max-width: 900px) {
  #progress-bar-markings .vl {
    margin: 14px 0 0 0;
  }
}

#progress-fill {
  display: inline-block;
  height: 100%;
  border-radius: 40px;
  transition: all 1s;
  margin: 0 0 40px 0;
  background-color: var(--off-yellow);
}

@media(max-width: 900px) {
  #progress-fill {
    border-radius: 20px;
  }
}

.loading {
  width: 100% !important;
  background-size: 100px 100px;
  overflow: hidden;

  background-image: linear-gradient(
    -45deg,
    #0002 25%,
    transparent 25%,
    transparent 50%,
    #0002 50%,
    #0002 75%,
    transparent 75%,
    transparent
  );

  animation: moveBG 2s linear infinite;
}

@keyframes moveBG {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 100px 100px;
  }
}

@keyframes moveBG {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 100px 100px;
  }
}
